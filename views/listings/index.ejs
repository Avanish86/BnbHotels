<% layout("/layouts/boilerplate") -%>

<body>

    <h3>All listings</h3>

    <!-- <form action="/listing/new" method="get">
        <button>Create New List</button>
    </form> -->

    <div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1 ">
        <% for(listing of alllisting){ %>
            <a href="/listing/<%=listing._id%>" class="listing-link">
            <div class="card col" >
                <img src="<%=listing.image%>" class="card-img-top"style="height: 14rem; alt="load image ">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                  <p class="card-text"> 
                   <b><%=listing.title %></b> <br>
                    &#8377;<%=listing.price.toLocaleString("en-IN") %>/Night 
        
                 </p>
                </div>
            </div>
            </a>
        <%}%>
            
    </div>
    

   
</body>
    
